---
interface Props {
  title: string;
  description: string;
  eventDate: Date;
  eventTime?: string;
  location: string;
  slug: string;
  image?: string;
  imageAlt?: string;
  registrationLink?: string;
  isPast?: boolean;
}

const { title, description, eventDate, eventTime, location, slug, image, imageAlt, registrationLink, isPast = false } = Astro.props;

const formattedDate = eventDate.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const monthShort = eventDate.toLocaleDateString('en-US', { month: 'short' }).toUpperCase();
const day = eventDate.getDate();
---

<article class={`rounded-2xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:scale-[1.02] ${isPast ? 'opacity-75' : ''}`} style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
  <a href={`/events/${slug}`} class="block">
    {image ? (
      <div class="relative">
        <div class="aspect-video overflow-hidden" style="background-color: #EFE9DC;">
          <img
            src={image}
            alt={imageAlt || title}
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
          />
        </div>

        <!-- Date Badge - Only when image exists -->
        <div class="absolute top-4 left-4 rounded-xl shadow-xl p-3 text-center min-w-[4.5rem]" style="background-color: #FAF8F4; border: 2px solid #C1503D;">
          <div class="text-xs font-bold mb-1" style="color: #C1503D;">{monthShort}</div>
          <div class="text-3xl font-bold" style="font-family: Georgia, serif; color: #3D3D3D;">{day}</div>
        </div>

        {isPast && (
          <div class="absolute top-4 right-4 px-3 py-1 rounded-full text-sm font-semibold" style="background-color: rgba(62, 39, 35, 0.85); color: #FAF8F4;">
            Past Event
          </div>
        )}
      </div>
    ) : null}

    <div class="p-6">
      {!image && (
        <!-- Date and Title together when no image -->
        <div class="flex items-start gap-4 mb-4">
          <div class="flex-shrink-0 rounded-xl shadow-md px-4 py-3" style="background-color: #FAF8F4; border-left: 4px solid #C1503D;">
            <div class="text-center">
              <div class="text-xs font-bold" style="color: #C1503D;">{monthShort}</div>
              <div class="text-2xl font-bold" style="font-family: Georgia, serif; color: #3D3D3D;">{day}</div>
            </div>
          </div>
          <div class="flex-1">
            <div class="flex items-start justify-between gap-2">
              <h3 class="text-xl font-bold transition-colors flex-1" style="font-family: Georgia, serif; color: #3D3D3D;" onmouseover="this.style.color='#C1503D'" onmouseout="this.style.color='#3D3D3D'">
                {title}
              </h3>
              {isPast && (
                <span class="text-xs font-semibold px-2 py-1 rounded whitespace-nowrap" style="background-color: #3D3D3D; color: #FAF8F4;">Past</span>
              )}
            </div>
          </div>
        </div>
      )}

      {image && (
        <h3 class="text-xl font-bold mb-3 transition-colors" style="font-family: Georgia, serif; color: #3D3D3D;" onmouseover="this.style.color='#C1503D'" onmouseout="this.style.color='#3D3D3D'">
          {title}
        </h3>
      )}

      <div class="space-y-2 mb-4 text-sm" style="color: #3D3D3D;">
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2 flex-shrink-0" style="color: #D4A574;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>{formattedDate}</span>
        </div>

        {eventTime && (
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2 flex-shrink-0" style="color: #D4A574;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{eventTime}</span>
          </div>
        )}

        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2 flex-shrink-0" style="color: #D4A574;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>{location}</span>
        </div>
      </div>

      <p class="mb-4 line-clamp-2" style="color: #3D3D3D;">
        {description}
      </p>

      {registrationLink && !isPast && (
        <div class="pt-4" style="border-top: 2px solid #D4A574;">
          <span class="font-semibold transition-colors" style="color: #C1503D;" onmouseover="this.style.color='#A84636'" onmouseout="this.style.color='#C1503D'">
            Register Now â†’
          </span>
        </div>
      )}
    </div>
  </a>
</article>
