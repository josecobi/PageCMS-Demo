---
const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50" style="background-color: #F5F1E8; box-shadow: 0 4px 6px -1px rgba(62, 39, 35, 0.1), 0 2px 4px -1px rgba(62, 39, 35, 0.06);">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <span class="text-2xl md:text-3xl font-bold" style="color: #C1503D; font-family: Georgia, serif;">
            Fells Prospect
          </span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:block">
        <div class="ml-10 flex items-baseline space-x-1">
          <a
            href="/"
            class={`${currentPath === '/' ? 'font-semibold' : ''} px-3 py-2 transition-colors rounded-md text-sm`}
            style={currentPath === '/' ? 'color: #C1503D; background-color: #EFE9DC;' : 'color: #4A3933;'}
            onmouseover="if (this.getAttribute('data-active') !== 'true') this.style.color='#C1503D'"
            onmouseout="if (this.getAttribute('data-active') !== 'true') this.style.color='#4A3933'"
            data-active={currentPath === '/' ? 'true' : 'false'}
          >
            Home
          </a>
          <a
            href="/about"
            class={`${currentPath === '/about' ? 'font-semibold' : ''} px-3 py-2 transition-colors rounded-md text-sm`}
            style={currentPath === '/about' ? 'color: #C1503D; background-color: #EFE9DC;' : 'color: #4A3933;'}
            onmouseover="if (this.getAttribute('data-active') !== 'true') this.style.color='#C1503D'"
            onmouseout="if (this.getAttribute('data-active') !== 'true') this.style.color='#4A3933'"
            data-active={currentPath === '/about' ? 'true' : 'false'}
          >
            About
          </a>
          <a
            href="/neighborhood"
            class={`${currentPath === '/neighborhood' ? 'font-semibold' : ''} px-3 py-2 transition-colors rounded-md text-sm`}
            style={currentPath === '/neighborhood' ? 'color: #C1503D; background-color: #EFE9DC;' : 'color: #4A3933;'}
            onmouseover="if (this.getAttribute('data-active') !== 'true') this.style.color='#C1503D'"
            onmouseout="if (this.getAttribute('data-active') !== 'true') this.style.color='#4A3933'"
            data-active={currentPath === '/neighborhood' ? 'true' : 'false'}
          >
            Our Neighborhood
          </a>
          <a
            href="/blog"
            class={`${currentPath.startsWith('/blog') ? 'font-semibold' : ''} px-3 py-2 transition-colors rounded-md text-sm`}
            style={currentPath.startsWith('/blog') ? 'color: #C1503D; background-color: #EFE9DC;' : 'color: #4A3933;'}
            onmouseover="if (this.getAttribute('data-active') !== 'true') this.style.color='#C1503D'"
            onmouseout="if (this.getAttribute('data-active') !== 'true') this.style.color='#4A3933'"
            data-active={currentPath.startsWith('/blog') ? 'true' : 'false'}
          >
            News
          </a>
          <a
            href="/events"
            class={`${currentPath.startsWith('/events') ? 'font-semibold' : ''} px-3 py-2 transition-colors rounded-md text-sm`}
            style={currentPath.startsWith('/events') ? 'color: #C1503D; background-color: #EFE9DC;' : 'color: #4A3933;'}
            onmouseover="if (this.getAttribute('data-active') !== 'true') this.style.color='#C1503D'"
            onmouseout="if (this.getAttribute('data-active') !== 'true') this.style.color='#4A3933'"
            data-active={currentPath.startsWith('/events') ? 'true' : 'false'}
          >
            Events
          </a>
          <a
            href="/committees"
            class={`${currentPath === '/committees' ? 'font-semibold' : ''} px-3 py-2 transition-colors rounded-md text-sm`}
            style={currentPath === '/committees' ? 'color: #C1503D; background-color: #EFE9DC;' : 'color: #4A3933;'}
            onmouseover="if (this.getAttribute('data-active') !== 'true') this.style.color='#C1503D'"
            onmouseout="if (this.getAttribute('data-active') !== 'true') this.style.color='#4A3933'"
            data-active={currentPath === '/committees' ? 'true' : 'false'}
          >
            Committees
          </a>
          <a
            href="/membership"
            class={`${currentPath === '/membership' ? 'font-semibold' : ''} px-3 py-2 transition-colors rounded-md text-sm`}
            style={currentPath === '/membership' ? 'color: #C1503D; background-color: #EFE9DC;' : 'color: #4A3933;'}
            onmouseover="if (this.getAttribute('data-active') !== 'true') this.style.color='#C1503D'"
            onmouseout="if (this.getAttribute('data-active') !== 'true') this.style.color='#4A3933'"
            data-active={currentPath === '/membership' ? 'true' : 'false'}
          >
            Membership
          </a>
          <a
            href="/resources"
            class={`${currentPath === '/resources' ? 'font-semibold' : ''} px-3 py-2 transition-colors rounded-md text-sm`}
            style={currentPath === '/resources' ? 'color: #C1503D; background-color: #EFE9DC;' : 'color: #4A3933;'}
            onmouseover="if (this.getAttribute('data-active') !== 'true') this.style.color='#C1503D'"
            onmouseout="if (this.getAttribute('data-active') !== 'true') this.style.color='#4A3933'"
            data-active={currentPath === '/resources' ? 'true' : 'false'}
          >
            Local Resources
          </a>
          <a
            href="/sponsorship"
            class={`${currentPath === '/sponsorship' ? 'font-semibold' : ''} px-3 py-2 transition-colors rounded-md text-sm`}
            style={currentPath === '/sponsorship' ? 'color: #C1503D; background-color: #EFE9DC;' : 'color: #4A3933;'}
            onmouseover="if (this.getAttribute('data-active') !== 'true') this.style.color='#C1503D'"
            onmouseout="if (this.getAttribute('data-active') !== 'true') this.style.color='#4A3933'"
            data-active={currentPath === '/sponsorship' ? 'true' : 'false'}
          >
            Sponsorship
          </a>
          <a
            href="/contact"
            class={`${currentPath === '/contact' ? 'font-semibold' : ''} px-3 py-2 transition-colors rounded-md text-sm`}
            style={currentPath === '/contact' ? 'color: #C1503D; background-color: #EFE9DC;' : 'color: #4A3933;'}
            onmouseover="if (this.getAttribute('data-active') !== 'true') this.style.color='#C1503D'"
            onmouseout="if (this.getAttribute('data-active') !== 'true') this.style.color='#4A3933'"
            data-active={currentPath === '/contact' ? 'true' : 'false'}
          >
            Contact
          </a>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="hidden lg:flex items-center space-x-4">
        <a
          href="/donate"
          class="px-5 py-2.5 text-white rounded-lg transition-all font-semibold text-sm shadow-md hover:shadow-lg"
          style="background-color: #2D5832;"
          onmouseover="this.style.backgroundColor='#3A6B3F'"
          onmouseout="this.style.backgroundColor='#2D5832'"
        >
          Donate
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="lg:hidden">
        <button
          id="mobile-menu-button"
          type="button"
          class="inline-flex items-center justify-center p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-inset"
          style="color: #4A3933;"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <!-- Hamburger icon -->
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden lg:hidden pb-4">
      <div class="space-y-1">
        <a href="/" class="block px-3 py-2 rounded-md transition-colors" style="color: #4A3933;">Home</a>
        <a href="/about" class="block px-3 py-2 rounded-md transition-colors" style="color: #4A3933;">About</a>
        <a href="/neighborhood" class="block px-3 py-2 rounded-md transition-colors" style="color: #4A3933;">Our Neighborhood</a>
        <a href="/blog" class="block px-3 py-2 rounded-md transition-colors" style="color: #4A3933;">News</a>
        <a href="/events" class="block px-3 py-2 rounded-md transition-colors" style="color: #4A3933;">Events</a>
        <a href="/committees" class="block px-3 py-2 rounded-md transition-colors" style="color: #4A3933;">Committees</a>
        <a href="/membership" class="block px-3 py-2 rounded-md transition-colors" style="color: #4A3933;">Membership</a>
        <a href="/resources" class="block px-3 py-2 rounded-md transition-colors" style="color: #4A3933;">Local Resources</a>
        <a href="/sponsorship" class="block px-3 py-2 rounded-md transition-colors" style="color: #4A3933;">Sponsorship</a>
        <a href="/contact" class="block px-3 py-2 rounded-md transition-colors" style="color: #4A3933;">Contact</a>
        <div class="pt-4 space-y-2">
          <a href="/donate" class="block w-full text-center px-4 py-2 text-white rounded-md font-semibold" style="background-color: #2D5832;">Donate</a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    const isHidden = mobileMenu?.classList.contains('hidden');
    if (isHidden) {
      mobileMenu?.classList.remove('hidden');
      menuButton?.setAttribute('aria-expanded', 'true');
    } else {
      mobileMenu?.classList.add('hidden');
      menuButton?.setAttribute('aria-expanded', 'false');
    }
  });
</script>
