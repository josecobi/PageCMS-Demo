---
interface Props {
  title: string;
  description: string;
  documentDate: Date;
  category: string;
  documentFile: string;
  fileSize?: string;
  slug: string;
  featured?: boolean;
}

const { title, description, documentDate, category, documentFile, fileSize, slug, featured = false } = Astro.props;

const formattedDate = documentDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const categoryColor = category === 'Meeting Minutes' ? '#C1503D' : '#2D5832';
const categoryHoverColor = category === 'Meeting Minutes' ? '#A84636' : '#3A6B3F';
const categoryBgColor = category === 'Meeting Minutes' ? 'rgba(193, 80, 61, 0.1)' : 'rgba(45, 88, 50, 0.1)';
---

<article class={`rounded-2xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:scale-[1.02] ${featured ? 'ring-2 ring-offset-2' : ''}`} style={`background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC); ${featured ? `ring-color: ${categoryColor};` : ''}`}>
  <div class="p-6">
    <!-- Category Badge -->
    <div class="flex items-center justify-between mb-4">
      <span class="px-3 py-1 rounded-full text-xs font-semibold" style={`background-color: ${categoryBgColor}; color: ${categoryColor};`}>
        {category}
      </span>
      {featured && (
        <span class="px-3 py-1 rounded-full text-xs font-semibold" style="background-color: #C59D5F; color: #FAF8F4;">
          Featured
        </span>
      )}
    </div>

    <!-- Title -->
    <h3 class="text-xl font-bold mb-3 transition-colors" style="font-family: Georgia, serif; color: #3E2723;">
      {title}
    </h3>

    <!-- Metadata -->
    <div class="space-y-2 mb-4 text-sm" style="color: #4A3933;">
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2 flex-shrink-0" style="color: #C59D5F;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span>{formattedDate}</span>
      </div>

      {fileSize && (
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2 flex-shrink-0" style="color: #C59D5F;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <span>{fileSize}</span>
        </div>
      )}
    </div>

    <!-- Description -->
    <p class="mb-4 line-clamp-2" style="color: #4A3933;">
      {description}
    </p>

    <!-- Download Button -->
    <div class="pt-4" style="border-top: 2px solid #C59D5F;">
      <a
        href={documentFile}
        download
        class="inline-flex items-center font-semibold transition-colors"
        style={`color: ${categoryColor};`}
        onmouseover={`this.style.color='${categoryHoverColor}'`}
        onmouseout={`this.style.color='${categoryColor}'`}
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Download PDF â†’
      </a>
    </div>
  </div>
</article>
