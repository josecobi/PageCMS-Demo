---
interface Props {
  name: string;
  role: string;
  bio: string;
  image?: string;
  imageAlt?: string;
  email?: string;
  linkedin?: string;
}

const { name, role, bio, image, imageAlt, email, linkedin } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
  <div class="aspect-square overflow-hidden bg-gray-200">
    {image ? (
      <img
        src={image}
        alt={imageAlt || name}
        class="w-full h-full object-cover"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-blue-400 to-blue-600">
        <span class="text-6xl font-bold text-white">
          {name.split(' ').map(n => n[0]).join('')}
        </span>
      </div>
    )}
  </div>

  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-1">{name}</h3>
    <p class="text-blue-600 font-semibold mb-3">{role}</p>

    <p class="text-gray-600 text-sm mb-4 line-clamp-3">
      {bio}
    </p>

    <div class="flex items-center space-x-4 pt-4 border-t border-gray-200">
      {email && (
        <a
          href={`mailto:${email}`}
          class="text-gray-500 hover:text-blue-600 transition-colors"
          aria-label={`Email ${name}`}
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </a>
      )}

      {linkedin && (
        <a
          href={linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-500 hover:text-blue-600 transition-colors"
          aria-label={`${name}'s LinkedIn`}
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      )}
    </div>
  </div>
</div>
