---
interface Props {
  title?: string;
  description?: string;
  compact?: boolean;
}

const {
  title = "Stay Updated",
  description = "Subscribe to our newsletter for the latest updates and stories.",
  compact = false
} = Astro.props;
---

<div class={compact ? "py-8" : "py-12 px-6 bg-gradient-to-r from-blue-600 to-blue-700 rounded-lg"}>
  <div class={compact ? "" : "max-w-2xl mx-auto text-center"}>
    <h2 class={`font-bold mb-2 ${compact ? 'text-2xl text-gray-900' : 'text-3xl text-white'}`}>
      {title}
    </h2>
    <p class={`mb-6 ${compact ? 'text-gray-600' : 'text-blue-100'}`}>
      {description}
    </p>

    <form
      action="https://formspree.io/f/YOUR_FORM_ID"
      method="POST"
      class="flex flex-col sm:flex-row gap-3"
    >
      <input
        type="email"
        name="email"
        placeholder="Enter your email"
        required
        class={`flex-1 px-4 py-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 ${
          compact ? 'border border-gray-300' : 'border-0'
        }`}
      />
      <button
        type="submit"
        class={`px-6 py-3 rounded-md font-semibold transition-colors ${
          compact
            ? 'bg-blue-600 text-white hover:bg-blue-700'
            : 'bg-white text-blue-600 hover:bg-blue-50'
        }`}
      >
        Subscribe
      </button>
    </form>

    <p class={`mt-3 text-xs ${compact ? 'text-gray-500' : 'text-blue-200'}`}>
      We respect your privacy. Unsubscribe at any time.
    </p>
  </div>
</div>
