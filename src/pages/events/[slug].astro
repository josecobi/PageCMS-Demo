---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const events = await getCollection('events');
  return events.map(event => ({
    params: { slug: event.slug },
    props: { event },
  }));
}

interface Props {
  event: CollectionEntry<'events'>;
}

const { event } = Astro.props;
const { Content } = await event.render();

const formattedDate = event.data.eventDate.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const monthShort = event.data.eventDate.toLocaleDateString('en-US', { month: 'short' }).toUpperCase();
const day = event.data.eventDate.getDate();

// Get related upcoming events
const allEvents = await getCollection('events');
const relatedEvents = allEvents
  .filter(e => e.slug !== event.slug && !e.data.isPast)
  .sort((a, b) => a.data.eventDate.getTime() - b.data.eventDate.getTime())
  .slice(0, 3);
---

<Layout title={event.data.title} description={event.data.description}>
  <article>
    <!-- Hero Section -->
    <header class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16 md:py-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        {event.data.isPast && (
          <div class="inline-block px-4 py-2 bg-white bg-opacity-20 rounded-full text-sm font-semibold mb-4">
            Past Event
          </div>
        )}

        <h1 class="text-3xl md:text-5xl font-bold mb-6 leading-tight">
          {event.data.title}
        </h1>

        <div class="flex flex-col sm:flex-row sm:items-center space-y-3 sm:space-y-0 sm:space-x-6 text-blue-100">
          <div class="flex items-center">
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span>{formattedDate}</span>
          </div>

          {event.data.eventTime && (
            <>
              <span class="hidden sm:inline">•</span>
              <div class="flex items-center">
                <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{event.data.eventTime}</span>
              </div>
            </>
          )}

          <span class="hidden sm:inline">•</span>
          <div class="flex items-center">
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>{event.data.location}</span>
          </div>
        </div>
      </div>
    </header>

    <!-- Featured Image -->
    {event.data.image && (
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 -mt-12">
        <div class="aspect-video overflow-hidden rounded-lg shadow-2xl bg-gray-200 relative">
          <img
            src={event.data.image}
            alt={event.data.imageAlt || event.data.title}
            class="w-full h-full object-cover"
          />
          <!-- Date Badge Overlay -->
          <div class="absolute top-6 left-6 bg-white rounded-lg shadow-lg p-4 text-center min-w-[5rem]">
            <div class="text-sm font-bold text-blue-600">{monthShort}</div>
            <div class="text-3xl font-bold text-gray-900">{day}</div>
          </div>
        </div>
      </div>
    )}

    <!-- Content -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
      <!-- Registration CTA -->
      {event.data.registrationLink && !event.data.isPast && (
        <div class="mb-8 p-6 bg-blue-50 border border-blue-200 rounded-lg">
          <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-1">Register for this event</h3>
              <p class="text-gray-600">Secure your spot today!</p>
            </div>
            <a
              href={event.data.registrationLink}
              target="_blank"
              rel="noopener noreferrer"
              class="px-6 py-3 bg-blue-600 text-white rounded-md font-semibold hover:bg-blue-700 transition-colors whitespace-nowrap"
            >
              Register Now →
            </a>
          </div>
        </div>
      )}

      <!-- Event Description -->
      <div class="prose prose-lg max-w-none prose-headings:font-bold prose-headings:text-gray-900 prose-p:text-gray-600 prose-a:text-blue-600 hover:prose-a:text-blue-700">
        <Content />
      </div>

      <!-- Event Details Box -->
      <div class="mt-12 p-6 bg-gray-50 rounded-lg border border-gray-200">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Event Details</h3>
        <dl class="space-y-3">
          <div>
            <dt class="text-sm font-semibold text-gray-700">Date</dt>
            <dd class="text-gray-600">{formattedDate}</dd>
          </div>
          {event.data.eventTime && (
            <div>
              <dt class="text-sm font-semibold text-gray-700">Time</dt>
              <dd class="text-gray-600">{event.data.eventTime}</dd>
            </div>
          )}
          <div>
            <dt class="text-sm font-semibold text-gray-700">Location</dt>
            <dd class="text-gray-600">{event.data.location}</dd>
          </div>
        </dl>
      </div>

      <!-- Share Section -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Share this event</h3>
        <div class="flex space-x-4">
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(event.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 bg-blue-400 text-white rounded-md hover:bg-blue-500 transition-colors"
          >
            Twitter
          </a>
          <a
            href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
          >
            Facebook
          </a>
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 bg-blue-700 text-white rounded-md hover:bg-blue-800 transition-colors"
          >
            LinkedIn
          </a>
        </div>
      </div>
    </div>

    <!-- Related Events -->
    {relatedEvents.length > 0 && (
      <section class="bg-gray-50 py-12 md:py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8">Other Upcoming Events</h2>
          <div class="grid md:grid-cols-3 gap-8">
            {relatedEvents.map(relatedEvent => (
              <a href={`/events/${relatedEvent.slug}`} class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
                {relatedEvent.data.image && (
                  <div class="aspect-video overflow-hidden bg-gray-200">
                    <img
                      src={relatedEvent.data.image}
                      alt={relatedEvent.data.imageAlt || relatedEvent.data.title}
                      class="w-full h-full object-cover"
                    />
                  </div>
                )}
                <div class="p-6">
                  <div class="text-sm text-gray-500 mb-2">
                    {relatedEvent.data.eventDate.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 mb-2 hover:text-blue-600 transition-colors">
                    {relatedEvent.data.title}
                  </h3>
                  <p class="text-gray-600 text-sm">
                    {relatedEvent.data.description}
                  </p>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Back to Events -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <a
        href="/events"
        class="inline-flex items-center text-blue-600 hover:text-blue-700 font-semibold transition-colors"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to all events
      </a>
    </div>
  </article>
</Layout>
