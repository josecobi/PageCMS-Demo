---
import Layout from '../../layouts/Layout.astro';
import EventCard from '../../components/EventCard.astro';
import { getCollection } from 'astro:content';

// Get all events
const allEvents = await getCollection('events');

// Separate upcoming and past events based on actual dates
const today = new Date();
today.setHours(0, 0, 0, 0);

const upcomingEvents = allEvents
  .filter(event => {
    const eventDate = new Date(event.data.eventDate);
    eventDate.setHours(0, 0, 0, 0);
    return eventDate >= today; // Only events today or in the future
  })
  .sort((a, b) => a.data.eventDate.getTime() - b.data.eventDate.getTime()); // Soonest first

const pastEvents = allEvents
  .filter(event => {
    const eventDate = new Date(event.data.eventDate);
    eventDate.setHours(0, 0, 0, 0);
    return eventDate < today; // Only events before today
  })
  .sort((a, b) => b.data.eventDate.getTime() - a.data.eventDate.getTime()); // Most recent first

const featuredEvents = allEvents.filter(event => event.data.featured);
---

<Layout
  title="Events - Fells Prospect Community Association"
  description="Join us at our upcoming events and monthly membership meetings. Be part of the Fells Prospect community."
>
  <!-- Hero Section -->
  <section class="relative py-20 md:py-28" style="background: linear-gradient(135deg, #1B365D 0%, #4A7C9D 100%);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6" style="font-family: Georgia, serif; color: #FAF8F4;">
        Events & Meetings
      </h1>
      <p class="text-xl md:text-2xl max-w-3xl mx-auto" style="color: #EFE9DC;">
        Join us at our upcoming events and be part of the Fells Prospect community
      </p>
    </div>
    <!-- Decorative bottom -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 60" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
        <path d="M0 0L60 5C120 10 240 20 360 23.3C480 27 600 23 720 21.7C840 20 960 20 1080 23.3C1200 27 1320 33 1380 36.7L1440 40V60H0V0Z" fill="#FAF8F4"/>
      </svg>
    </div>
  </section>

  <!-- Membership Meetings Section - PROMINENT -->
  <section class="py-16 md:py-20" style="background-color: #FAF8F4;">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="rounded-2xl shadow-2xl p-8 md:p-12 relative overflow-hidden" style="background: linear-gradient(135deg, #1B365D 0%, #4A7C9D 100%); color: #FAF8F4;">
        <div class="absolute top-0 right-0 w-64 h-64 opacity-10" style="background: radial-gradient(circle, #FAF8F4, transparent);"></div>
        <div class="relative z-10">
          <div class="text-center mb-10">
            <div class="w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6" style="background-color: #FAF8F4;">
              <svg class="w-10 h-10" style="color: #C1503D;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: Georgia, serif;">
              General Membership Meetings
            </h2>
            <div class="w-32 h-1 mx-auto" style="background-color: #C1503D;"></div>
          </div>

          <div class="max-w-3xl mx-auto text-center mb-10">
            <p class="text-xl md:text-2xl mb-8 leading-relaxed" style="color: #EFE9DC;">
              General Membership Meetings are held on the <strong>last Thursday of each month</strong> at <strong>Kisling's Tavern (Upstairs)</strong> beginning at <strong>7:00PM</strong>.
            </p>
            <p class="text-lg italic" style="color: #C1503D;">
              Unless otherwise noted.
            </p>
          </div>

          <!-- Note about viewing upcoming meetings -->
          <div class="mt-10 p-6 rounded-xl text-center" style="background-color: rgba(250, 248, 244, 0.1); border: 2px solid #D4A574;">
            <p class="text-lg font-semibold mb-2" style="color: #D4A574;">
              ğŸ“… View Upcoming Meetings Below
            </p>
            <p style="color: #EFE9DC;">
              Scroll down to see our upcoming membership meetings in the Featured Events section
            </p>
          </div>

          <!-- Location Info -->
          <div class="mt-10 p-6 rounded-xl text-center" style="background-color: rgba(250, 248, 244, 0.1); border: 2px solid #D4A574;">
            <p class="text-lg font-semibold mb-2" style="color: #D4A574;">
              ğŸ“ Kisling's Tavern (Upstairs)
            </p>
            <p style="color: #EFE9DC;">
              Join us for our monthly meetings and help shape the future of our community!
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12 md:py-16" style="background: linear-gradient(to bottom, #EFE9DC, #F5F1E8);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Featured Events -->
      {featuredEvents.length > 0 && (
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center" style="font-family: Georgia, serif; color: #3D3D3D;">
            Featured <span style="color: #C1503D;">Events</span>
          </h2>
          <div class="w-32 h-1 mx-auto mb-10" style="background-color: #D4A574;"></div>
          <div class="grid md:grid-cols-2 gap-8">
            {featuredEvents.slice(0, 2).map(event => (
              <EventCard
                title={event.data.title}
                description={event.data.description}
                eventDate={event.data.eventDate}
                eventTime={event.data.eventTime}
                location={event.data.location}
                slug={event.slug}
                image={event.data.image}
                imageAlt={event.data.imageAlt}
                registrationLink={event.data.registrationLink}
                isPast={event.data.isPast}
              />
            ))}
          </div>
        </div>
      )}

      <!-- Upcoming Events -->
      {upcomingEvents.length > 0 && (
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center" style="font-family: Georgia, serif; color: #3D3D3D;">
            Upcoming <span style="color: #C1503D;">Events</span>
          </h2>
          <div class="w-32 h-1 mx-auto mb-10" style="background-color: #D4A574;"></div>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {upcomingEvents.map(event => (
              <EventCard
                title={event.data.title}
                description={event.data.description}
                eventDate={event.data.eventDate}
                eventTime={event.data.eventTime}
                location={event.data.location}
                slug={event.slug}
                image={event.data.image}
                imageAlt={event.data.imageAlt}
                registrationLink={event.data.registrationLink}
                isPast={false}
              />
            ))}
          </div>
        </div>
      )}

      {upcomingEvents.length === 0 && (
        <div class="text-center py-12 rounded-2xl mb-16" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
          <svg class="w-16 h-16 mx-auto mb-4" style="color: #D4A574;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <h3 class="text-xl font-semibold mb-2" style="color: #3D3D3D; font-family: Georgia, serif;">No Upcoming Events</h3>
          <p style="color: #3D3D3D;">Check back soon for new events!</p>
        </div>
      )}

      <!-- Past Events -->
      {pastEvents.length > 0 && (
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center" style="font-family: Georgia, serif; color: #3D3D3D;">
            Past <span style="color: #3D3D3D;">Events</span>
          </h2>
          <div class="w-32 h-1 mx-auto mb-10" style="background-color: #D4A574;"></div>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {pastEvents.slice(0, 6).map(event => (
              <EventCard
                title={event.data.title}
                description={event.data.description}
                eventDate={event.data.eventDate}
                eventTime={event.data.eventTime}
                location={event.data.location}
                slug={event.slug}
                image={event.data.image}
                imageAlt={event.data.imageAlt}
                isPast={true}
              />
            ))}
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 md:py-20" style="background: linear-gradient(135deg, #C1503D 0%, #A84636 100%); color: #FAF8F4;">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6" style="font-family: Georgia, serif;">Want to Stay Updated?</h2>
      <p class="text-xl mb-8" style="color: #EFE9DC;">
        Subscribe to our newsletter to receive updates about upcoming events and monthly meetings.
      </p>
      <a
        href="/newsletter"
        class="inline-block px-8 py-4 rounded-lg font-semibold transition-all shadow-lg"
        style="background-color: #FAF8F4; color: #C1503D;"
        onmouseover="this.style.backgroundColor='#EFE9DC'"
        onmouseout="this.style.backgroundColor='#FAF8F4'"
      >
        Subscribe to Newsletter
      </a>
    </div>
  </section>
</Layout>
