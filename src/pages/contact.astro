---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

// Fetch site settings
const settings = await getEntry('settings', 'settings');
const {
  contactAddress,
  contactAddressLine2,
  contactCity,
  contactState,
  contactZip,
  contactEmail,
  meetingFrequency,
  meetingTime,
  meetingLocation
} = settings.data;
---

<Layout
  title="Contact Fells Prospect Community - Get in Touch"
  description="Contact Fells Prospect Community for inquiries, partnerships, or to learn more about our programs and how you can get involved."
>
  <!-- Hero Section -->
  <section class="relative py-20" style="background: linear-gradient(135deg, #1B365D 0%, #4A7C9D 100%);">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6" style="font-family: Georgia, serif; color: #FAF8F4;">Get in Touch</h1>
      <p class="text-xl" style="color: #EFE9DC;">
        We'd love to hear from you. Reach out with questions, ideas, or to learn how you can get involved.
      </p>
    </div>
    <!-- Decorative bottom -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 60" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
        <path d="M0 0L60 5C120 10 240 20 360 23.3C480 27 600 23 720 21.7C840 20 960 20 1080 23.3C1200 27 1320 33 1380 36.7L1440 40V60H0V0Z" fill="#FAF8F4"/>
      </svg>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 md:py-20" style="background-color: #FAF8F4;">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-bold mb-6" style="font-family: Georgia, serif; color: #3D3D3D;">Send Us a Message</h2>
          <form
            action="https://formspree.io/f/YOUR_FORM_ID"
            method="POST"
            class="space-y-6"
          >
            <div>
              <label for="name" class="block text-sm font-semibold mb-2" style="color: #3D3D3D;">
                Full Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border rounded-md focus:ring-2 focus:outline-none"
                style="border-color: #D4A574; focus:ring-color: #1B365D;"
                placeholder="John Doe"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold mb-2" style="color: #3D3D3D;">
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border rounded-md focus:ring-2 focus:outline-none"
                style="border-color: #D4A574;"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-semibold mb-2" style="color: #3D3D3D;">
                Phone Number
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border rounded-md focus:ring-2 focus:outline-none"
                style="border-color: #D4A574;"
                placeholder="(555) 123-4567"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-semibold mb-2" style="color: #3D3D3D;">
                Subject *
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border rounded-md focus:ring-2 focus:outline-none"
                style="border-color: #D4A574;"
              >
                <option value="">Select a subject</option>
                <option value="general">General Inquiry</option>
                <option value="membership">Membership Questions</option>
                <option value="events">Events & Meetings</option>
                <option value="neighborhood">Neighborhood Issues</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold mb-2" style="color: #3D3D3D;">
                Message *
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="6"
                class="w-full px-4 py-3 border rounded-md focus:ring-2 focus:outline-none resize-none"
                style="border-color: #D4A574;"
                placeholder="Tell us how we can help..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full px-6 py-3 rounded-md font-semibold transition-colors"
              style="background-color: #1B365D; color: #FAF8F4;"
              onmouseover="this.style.backgroundColor='#4A7C9D'"
              onmouseout="this.style.backgroundColor='#1B365D'"
            >
              Send Message
            </button>

            <p class="text-sm" style="color: #3D3D3D;">
              * Required fields. We'll respond within 2 business days.
            </p>
          </form>
        </div>

        <!-- Contact Information -->
        <div>
          <h2 class="text-3xl font-bold mb-6" style="font-family: Georgia, serif; color: #3D3D3D;">Contact Information</h2>

          <!-- Contact Details -->
          <div class="space-y-6 mb-12">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center mr-4" style="background-color: rgba(197, 157, 95, 0.15);">
                <svg class="w-6 h-6" style="color: #D4A574;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-1" style="color: #3D3D3D;">Address</h3>
                <p style="color: #3D3D3D;">
                  Fells Prospect Community<br />
                  {contactAddress}<br />
                  {contactAddressLine2 && <>{contactAddressLine2}<br /></>}
                  {contactCity}, {contactState} {contactZip}
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center mr-4" style="background-color: rgba(197, 157, 95, 0.15);">
                <svg class="w-6 h-6" style="color: #D4A574;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-1" style="color: #3D3D3D;">Email</h3>
                <p style="color: #3D3D3D;">
                  General: <a href={`mailto:${contactEmail}`} class="transition-colors" style="color: #C1503D;" onmouseover="this.style.color='#A84636'" onmouseout="this.style.color='#C1503D'">{contactEmail}</a>
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center mr-4" style="background-color: rgba(197, 157, 95, 0.15);">
                <svg class="w-6 h-6" style="color: #D4A574;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-1" style="color: #3D3D3D;">Social Media</h3>
                <div class="flex space-x-4 mt-2">
                  <a href="https://facebook.com" target="_blank" rel="noopener noreferrer" class="transition-colors" style="color: #3D3D3D;" onmouseover="this.style.color='#C1503D'" onmouseout="this.style.color='#3D3D3D'">
                    Facebook
                  </a>
                  <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" class="transition-colors" style="color: #3D3D3D;" onmouseover="this.style.color='#C1503D'" onmouseout="this.style.color='#3D3D3D'">
                    Twitter
                  </a>
                  <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" class="transition-colors" style="color: #3D3D3D;" onmouseover="this.style.color='#C1503D'" onmouseout="this.style.color='#3D3D3D'">
                    Instagram
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Meeting Info -->
          <div class="p-6 rounded-lg" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
            <h3 class="text-xl font-bold mb-4" style="font-family: Georgia, serif; color: #3D3D3D;">General Membership Meetings</h3>
            <div class="space-y-2 text-sm">
              <p style="color: #3D3D3D;">
                <strong>When:</strong> {meetingFrequency} at {meetingTime}
              </p>
              <p style="color: #3D3D3D;">
                <strong>Where:</strong> {meetingLocation}
              </p>
              <p class="text-xs mt-4" style="color: #3D3D3D;">
                Unless otherwise noted. Check our events page for details.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links -->
  <section class="py-16 md:py-20" style="background: linear-gradient(to bottom, #EFE9DC, #F5F1E8);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-center mb-8" style="font-family: Georgia, serif; color: #3D3D3D;">Looking for Something Specific?</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <a href="/events" class="p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow text-center" style="background-color: #FAF8F4;">
          <svg class="w-12 h-12 mx-auto mb-3" style="color: #1B365D;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <h3 class="text-lg font-semibold mb-2" style="color: #3D3D3D;">Events & Meetings</h3>
          <p class="text-sm" style="color: #3D3D3D;">See upcoming community events</p>
        </a>

        <a href="/committees" class="p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow text-center" style="background-color: #FAF8F4;">
          <svg class="w-12 h-12 mx-auto mb-3" style="color: #C1503D;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <h3 class="text-lg font-semibold mb-2" style="color: #3D3D3D;">Committees</h3>
          <p class="text-sm" style="color: #3D3D3D;">Learn about our committees</p>
        </a>

        <a href="/membership" class="p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow text-center" style="background-color: #FAF8F4;">
          <svg class="w-12 h-12 mx-auto mb-3" style="color: #D4A574;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
          </svg>
          <h3 class="text-lg font-semibold mb-2" style="color: #3D3D3D;">Membership</h3>
          <p class="text-sm" style="color: #3D3D3D;">Join our community</p>
        </a>
      </div>
    </div>
  </section>
</Layout>
