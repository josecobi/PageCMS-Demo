---
import Layout from '../layouts/Layout.astro';

const supportOptions = [
  {
    name: 'Annual Membership',
    amount: '$20',
    description: 'Support our community association with an annual membership. Voting rights at general meetings included.',
    benefits: [
      'Voting rights at meetings',
      'Community newsletter',
      'Member events access',
    ],
  },
  {
    name: 'Family Membership',
    amount: '$30',
    description: 'Family membership for households. Two voting members included.',
    benefits: [
      'Two voting members',
      'All single benefits',
      'Family event discounts',
    ],
    featured: true,
  },
  {
    name: 'Business Supporter',
    amount: '$100',
    description: 'For local businesses who want to support the community association.',
    benefits: [
      'Business listing on website',
      'All member benefits',
      'Recognition in newsletter',
    ],
  },
  {
    name: 'Community Champion',
    amount: '$250+',
    description: 'Extra support for special projects and community initiatives.',
    benefits: [
      'All business benefits',
      'Special recognition',
      'Input on special projects',
    ],
  },
];
---

<Layout
  title="Support Us - Fells Prospect Community Association"
  description="Support your community by becoming a member of Fells Prospect Community Association. Your membership helps us serve the neighborhood."
>
  <!-- Hero Section -->
  <section class="relative py-20" style="background: linear-gradient(135deg, #C59D5F 0%, #C1503D 100%);">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6" style="font-family: Georgia, serif; color: #FAF8F4;">Support Your Community</h1>
      <p class="text-xl" style="color: #EFE9DC;">
        Your membership and support help us advocate for the neighborhood and organize community events
      </p>
    </div>
    <!-- Decorative bottom -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 60" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
        <path d="M0 0L60 5C120 10 240 20 360 23.3C480 27 600 23 720 21.7C840 20 960 20 1080 23.3C1200 27 1320 33 1380 36.7L1440 40V60H0V0Z" fill="#FAF8F4"/>
      </svg>
    </div>
  </section>

  <!-- Why Support -->
  <section class="py-16 md:py-20" style="background-color: #FAF8F4;">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6" style="font-family: Georgia, serif; color: #3E2723;">Your Support Matters</h2>
      <p class="text-xl leading-relaxed mb-8" style="color: #4A3933;">
        The Fells Prospect Community Association is a volunteer-run organization dedicated to improving our neighborhood.
        Your membership and contributions help us organize events, advocate for improvements, and keep neighbors connected.
      </p>

      <div class="grid md:grid-cols-3 gap-8 mt-12">
        <div class="text-center">
          <div class="text-5xl font-bold mb-2" style="color: #2D5832;">100%</div>
          <div style="color: #4A3933;">Volunteer-run</div>
        </div>
        <div class="text-center">
          <div class="text-5xl font-bold mb-2" style="color: #C1503D;">12+</div>
          <div style="color: #4A3933;">Events annually</div>
        </div>
        <div class="text-center">
          <div class="text-5xl font-bold mb-2" style="color: #C59D5F;">500+</div>
          <div style="color: #4A3933;">Neighborhood families</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Support Levels -->
  <section class="py-16 md:py-20" style="background: linear-gradient(to bottom, #EFE9DC, #F5F1E8);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12" style="font-family: Georgia, serif; color: #3E2723;">Membership & Support Levels</h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {supportOptions.map(level => (
          <div class={`rounded-lg shadow-md p-6 flex flex-col ${level.featured ? 'ring-2 transform scale-105' : ''}`} style={level.featured ? 'background-color: #FAF8F4; ring-color: #C59D5F;' : 'background-color: #FAF8F4;'}>
            {level.featured && (
              <div class="text-center mb-4">
                <span class="inline-block px-3 py-1 text-sm font-semibold rounded-full" style="background-color: #C59D5F; color: #FAF8F4;">
                  Most Popular
                </span>
              </div>
            )}
            <div class="text-center mb-6">
              <h3 class="text-2xl font-bold mb-2" style="color: #3E2723;">{level.name}</h3>
              <div class="text-4xl font-bold" style="color: #2D5832;">{level.amount}</div>
              <p class="text-sm mt-2" style="color: #4A3933;">{level.description}</p>
            </div>
            <ul class="space-y-3 flex-grow mb-6">
              {level.benefits.map(benefit => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 mr-2 flex-shrink-0 mt-0.5" style="color: #2D5832;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm" style="color: #4A3933;">{benefit}</span>
                </li>
              ))}
            </ul>
            <a
              href="/membership"
              class={`block text-center px-6 py-3 rounded-md font-semibold transition-colors ${level.featured ? '' : ''}`}
              style={level.featured
                ? 'background-color: #2D5832; color: #FAF8F4;'
                : 'background-color: #EFE9DC; color: #3E2723;'}
              onmouseover={level.featured
                ? "this.style.backgroundColor='#3A6B3F'"
                : "this.style.backgroundColor='#E5DFD2'"}
              onmouseout={level.featured
                ? "this.style.backgroundColor='#2D5832'"
                : "this.style.backgroundColor='#EFE9DC'"}
            >
              Learn More
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How Funds Are Used -->
  <section class="py-16 md:py-20" style="background-color: #FAF8F4;">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12" style="font-family: Georgia, serif; color: #3E2723;">How We Use Your Support</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="p-6 rounded-lg shadow-md" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
          <h3 class="text-xl font-bold mb-4" style="color: #3E2723;">Community Programs</h3>
          <ul class="space-y-3">
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-2 flex-shrink-0" style="color: #2D5832;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span style="color: #4A3933;">Monthly general meetings and events</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-2 flex-shrink-0" style="color: #2D5832;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span style="color: #4A3933;">Community newsletter and communications</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-2 flex-shrink-0" style="color: #2D5832;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span style="color: #4A3933;">Neighborhood social events</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-2 flex-shrink-0" style="color: #2D5832;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span style="color: #4A3933;">Community beautification projects</span>
            </li>
          </ul>
        </div>

        <div class="p-6 rounded-lg shadow-md" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
          <h3 class="text-xl font-bold mb-4" style="color: #3E2723;">Advocacy & Operations</h3>
          <ul class="space-y-3">
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-2 flex-shrink-0" style="color: #C1503D;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span style="color: #4A3933;">Advocacy with city officials</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-2 flex-shrink-0" style="color: #C1503D;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span style="color: #4A3933;">Website and communications tools</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-2 flex-shrink-0" style="color: #C1503D;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span style="color: #4A3933;">Insurance and administrative costs</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 mr-2 flex-shrink-0" style="color: #C1503D;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span style="color: #4A3933;">Community improvement initiatives</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Ways to Help -->
  <section class="py-16 md:py-20" style="background: linear-gradient(to bottom, #EFE9DC, #F5F1E8);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-center mb-8" style="font-family: Georgia, serif; color: #3E2723;">Other Ways to Support</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <a href="/volunteer" class="p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow text-center" style="background-color: #FAF8F4;">
          <svg class="w-12 h-12 mx-auto mb-3" style="color: #2D5832;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <h3 class="text-lg font-semibold mb-2" style="color: #3E2723;">Volunteer</h3>
          <p class="text-sm" style="color: #4A3933;">Share your time and skills with the community</p>
        </a>

        <a href="/committees" class="p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow text-center" style="background-color: #FAF8F4;">
          <svg class="w-12 h-12 mx-auto mb-3" style="color: #C1503D;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <h3 class="text-lg font-semibold mb-2" style="color: #3E2723;">Join a Committee</h3>
          <p class="text-sm" style="color: #4A3933;">Help guide community initiatives and decisions</p>
        </a>

        <a href="/events" class="p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow text-center" style="background-color: #FAF8F4;">
          <svg class="w-12 h-12 mx-auto mb-3" style="color: #C59D5F;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <h3 class="text-lg font-semibold mb-2" style="color: #3E2723;">Attend Events</h3>
          <p class="text-sm" style="color: #4A3933;">Participate in community gatherings and meetings</p>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 md:py-20" style="background: linear-gradient(135deg, #2D5832 0%, #3A6B3F 100%);">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6" style="font-family: Georgia, serif; color: #FAF8F4;">Ready to Join?</h2>
      <p class="text-xl mb-8" style="color: #EFE9DC;">
        Become a member today and help shape the future of Fells Prospect
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/membership"
          class="px-8 py-4 rounded-md font-semibold transition-colors"
          style="background-color: #FAF8F4; color: #2D5832;"
          onmouseover="this.style.backgroundColor='#EFE9DC'"
          onmouseout="this.style.backgroundColor='#FAF8F4'"
        >
          Become a Member
        </a>
        <a
          href="/contact"
          class="px-8 py-4 rounded-md font-semibold transition-colors border-2"
          style="border-color: #FAF8F4; color: #FAF8F4;"
          onmouseover="this.style.backgroundColor='rgba(250, 248, 244, 0.1)'"
          onmouseout="this.style.backgroundColor='transparent'"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>
