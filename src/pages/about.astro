---
import Layout from '../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';

// Fetch site settings
const settings = await getEntry('settings', 'settings');
const { missionStatement } = settings.data;

// Fetch all team members
const allTeamMembers = await getCollection('team');

// Filter and sort by category
const executiveBoard = allTeamMembers
  .filter(member => member.data.boardCategory === 'Executive Board')
  .sort((a, b) => a.data.order - b.data.order);

const boardMembersAtLarge = allTeamMembers
  .filter(member => member.data.boardCategory === 'At-Large')
  .sort((a, b) => a.data.order - b.data.order);

const committeeChairs = allTeamMembers
  .filter(member => member.data.boardCategory === 'Committee Chair')
  .sort((a, b) => a.data.order - b.data.order);
---

<Layout
  title="About Us - Fells Prospect Community Association"
  description="Learn about FPCA's mission to represent and serve residents and businesses in the Fells Prospect neighborhood of Baltimore, Maryland."
>
  <!-- Hero Section -->
  <section class="relative py-20 md:py-28 overflow-hidden" style="background: linear-gradient(135deg, #1B365D 0%, #4A7C9D 100%);">
    <!-- Pagoda Silhouette - Bottom right emerging -->
    <div class="absolute -bottom-20 right-8 md:right-16 h-96 w-auto opacity-15 pointer-events-none" style="filter: brightness(0) saturate(100%) invert(98%) sepia(4%) saturate(352%) hue-rotate(343deg) brightness(103%) contrast(96%);">
      <img src="/images/pagoda.svg" alt="" class="h-full w-auto" />
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <h1 class="text-5xl md:text-6xl font-bold mb-6" style="font-family: Georgia, serif; color: #FAF8F4;">
        About FPCA
      </h1>
      <p class="text-xl md:text-2xl max-w-3xl mx-auto" style="color: #EFE9DC;">
        Serving the residents and businesses of Fells Prospect since our founding
      </p>
    </div>
    <!-- Decorative bottom -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 60" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
        <path d="M0 0L60 5C120 10 240 20 360 23.3C480 27 600 23 720 21.7C840 20 960 20 1080 23.3C1200 27 1320 33 1380 36.7L1440 40V60H0V0Z" fill="#FAF8F4"/>
      </svg>
    </div>
  </section>

  <!-- Mission & About -->
  <section class="py-16 md:py-24" style="background-color: #FAF8F4;">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <div class="inline-block p-4 rounded-full mb-6" style="background: linear-gradient(135deg, #C1503D, #A84636);">
            <svg class="w-12 h-12" style="color: #FAF8F4;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </div>
          <h2 class="text-4xl md:text-5xl font-bold mb-4" style="font-family: Georgia, serif; color: #3D3D3D;">
            Our Mission
          </h2>
          <div class="w-32 h-1 mx-auto" style="background-color: #C1503D;"></div>
        </div>

        <div class="rounded-2xl shadow-xl p-8 md:p-12" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
          {missionStatement.split('\n\n').map((paragraph) => (
            <p class="text-xl mb-6 leading-relaxed last:mb-0" style="color: #3D3D3D;">
              {paragraph.trim()}
            </p>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Board of Directors -->
  <section class="py-16 md:py-24" style="background: linear-gradient(to bottom, #EFE9DC, #F5F1E8);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <div class="inline-block p-4 rounded-full mb-6" style="background: linear-gradient(135deg, #C1503D, #A84636);">
          <svg class="w-12 h-12" style="color: #FAF8F4;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold mb-4" style="font-family: Georgia, serif; color: #3D3D3D;">
          FPCA Board of Directors
        </h2>
        <div class="w-32 h-1 mx-auto" style="background-color: #C1503D;"></div>
      </div>

      <!-- Executive Board -->
      <div class="mb-16">
        <h3 class="text-3xl md:text-4xl font-bold mb-10 text-center" style="font-family: Georgia, serif; color: #C1503D;">Executive Board</h3>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
          {executiveBoard.map(member => (
            <div class="rounded-2xl shadow-xl overflow-hidden text-center transition-transform hover:scale-105" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
              <div class="aspect-square overflow-hidden" style="background-color: #EFE9DC; border-bottom: 4px solid #C1503D;">
                <img
                  src={member.data.image}
                  alt={member.data.name}
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="p-6">
                <h4 class="text-xl font-bold mb-2" style="font-family: Georgia, serif; color: #3D3D3D;">{member.data.name}</h4>
                <p class="font-semibold" style="color: #C1503D;">{member.data.role}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Board Members At-Large -->
      <div class="mb-16">
        <h3 class="text-3xl md:text-4xl font-bold mb-10 text-center" style="font-family: Georgia, serif; color: #C1503D;">Board Members At-Large</h3>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8 max-w-5xl mx-auto">
          {boardMembersAtLarge.map(member => (
            <div class="rounded-2xl shadow-xl overflow-hidden text-center transition-transform hover:scale-105" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
              <div class="aspect-square overflow-hidden" style="background-color: #EFE9DC; border-bottom: 4px solid #C1503D;">
                <img
                  src={member.data.image}
                  alt={member.data.name}
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="p-6">
                <h4 class="text-xl font-bold" style="font-family: Georgia, serif; color: #3D3D3D;">{member.data.name}</h4>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Committee Chairs -->
      <div>
        <h3 class="text-3xl md:text-4xl font-bold mb-10 text-center" style="font-family: Georgia, serif; color: #C1503D;">Committee Chairs</h3>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {committeeChairs.map(chair => (
            <div class="rounded-2xl shadow-xl overflow-hidden text-center transition-transform hover:scale-105" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
              <div class="aspect-square overflow-hidden" style="background-color: #EFE9DC; border-bottom: 4px solid #C1503D;">
                <img
                  src={chair.data.image}
                  alt={chair.data.name}
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="p-6">
                <h4 class="text-xl font-bold mb-2" style="font-family: Georgia, serif; color: #3D3D3D;">{chair.data.name}</h4>
                <p class="font-semibold" style="color: #C1503D;">{chair.data.role}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 md:py-24" style="background: linear-gradient(135deg, #1B365D 0%, #4A7C9D 100%); color: #FAF8F4;">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6" style="font-family: Georgia, serif;">Join Our Community</h2>
      <p class="text-xl mb-8" style="color: #EFE9DC;">
        Become a member of FPCA and help shape the future of our neighborhood. Your involvement makes a difference.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/membership"
          class="inline-block px-8 py-4 font-semibold rounded-lg transition-all shadow-lg text-lg"
          style="background-color: #FAF8F4; color: #1B365D;"
          onmouseover="this.style.backgroundColor='#EFE9DC'"
          onmouseout="this.style.backgroundColor='#FAF8F4'"
        >
          Become a Member
        </a>
        <a
          href="/contact"
          class="inline-block px-8 py-4 font-semibold rounded-lg transition-all border-2 text-lg"
          style="border-color: #FAF8F4; color: #FAF8F4;"
          onmouseover="this.style.backgroundColor='rgba(250, 248, 244, 0.1)'"
          onmouseout="this.style.backgroundColor='transparent'"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>
