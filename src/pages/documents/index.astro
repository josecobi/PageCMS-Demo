---
import Layout from '../../layouts/Layout.astro';
import DocumentCard from '../../components/DocumentCard.astro';
import { getCollection } from 'astro:content';

// Get all documents
const allDocuments = await getCollection('documents');

// Sort all documents by date (newest first)
const sortedDocuments = allDocuments.sort((a, b) =>
  b.data.documentDate.getTime() - a.data.documentDate.getTime()
);

// Filter by category
const meetingMinutes = sortedDocuments.filter(doc => doc.data.category === 'Meeting Minutes');
const governanceDocs = sortedDocuments.filter(doc => doc.data.category === 'Governance Documents');

// Get featured documents
const featuredDocuments = sortedDocuments.filter(doc => doc.data.featured);
---

<Layout
  title="Documents - Fells Prospect Community Association"
  description="Access meeting minutes, governance documents, and other important community records."
>
  <!-- Hero Section -->
  <section class="relative py-20 md:py-28" style="background: linear-gradient(135deg, #2D5832 0%, #3A6B3F 100%);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6" style="font-family: Georgia, serif; color: #FAF8F4;">
        Documents & Records
      </h1>
      <p class="text-xl md:text-2xl max-w-3xl mx-auto" style="color: #EFE9DC;">
        Access meeting minutes, governance documents, and important community records
      </p>
    </div>
    <!-- Decorative bottom -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 60" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
        <path d="M0 0L60 5C120 10 240 20 360 23.3C480 27 600 23 720 21.7C840 20 960 20 1080 23.3C1200 27 1320 33 1380 36.7L1440 40V60H0V0Z" fill="#FAF8F4"/>
      </svg>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12 md:py-16" style="background: linear-gradient(to bottom, #EFE9DC, #F5F1E8);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Featured Documents -->
      {featuredDocuments.length > 0 && (
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center" style="font-family: Georgia, serif; color: #3E2723;">
            Featured <span style="color: #2D5832;">Documents</span>
          </h2>
          <div class="w-32 h-1 mx-auto mb-10" style="background-color: #C59D5F;"></div>
          <div class="grid md:grid-cols-2 gap-8">
            {featuredDocuments.slice(0, 2).map(doc => (
              <DocumentCard
                title={doc.data.title}
                description={doc.data.description}
                documentDate={doc.data.documentDate}
                category={doc.data.category}
                documentFile={doc.data.documentFile}
                fileSize={doc.data.fileSize}
                slug={doc.slug}
                featured={true}
              />
            ))}
          </div>
        </div>
      )}

      <!-- Meeting Minutes -->
      {meetingMinutes.length > 0 && (
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center" style="font-family: Georgia, serif; color: #3E2723;">
            Meeting <span style="color: #C1503D;">Minutes</span>
          </h2>
          <div class="w-32 h-1 mx-auto mb-10" style="background-color: #C59D5F;"></div>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {meetingMinutes.map(doc => (
              <DocumentCard
                title={doc.data.title}
                description={doc.data.description}
                documentDate={doc.data.documentDate}
                category={doc.data.category}
                documentFile={doc.data.documentFile}
                fileSize={doc.data.fileSize}
                slug={doc.slug}
                featured={doc.data.featured}
              />
            ))}
          </div>
        </div>
      )}

      {meetingMinutes.length === 0 && (
        <div class="text-center py-12 rounded-2xl mb-16" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
          <svg class="w-16 h-16 mx-auto mb-4" style="color: #C59D5F;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="text-xl font-semibold mb-2" style="color: #3E2723; font-family: Georgia, serif;">No Meeting Minutes Available</h3>
          <p style="color: #4A3933;">Meeting minutes will be posted here after each general membership meeting.</p>
        </div>
      )}

      <!-- Governance Documents -->
      {governanceDocs.length > 0 && (
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center" style="font-family: Georgia, serif; color: #3E2723;">
            Governance <span style="color: #2D5832;">Documents</span>
          </h2>
          <div class="w-32 h-1 mx-auto mb-10" style="background-color: #C59D5F;"></div>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {governanceDocs.map(doc => (
              <DocumentCard
                title={doc.data.title}
                description={doc.data.description}
                documentDate={doc.data.documentDate}
                category={doc.data.category}
                documentFile={doc.data.documentFile}
                fileSize={doc.data.fileSize}
                slug={doc.slug}
                featured={doc.data.featured}
              />
            ))}
          </div>
        </div>
      )}

      {governanceDocs.length === 0 && (
        <div class="text-center py-12 rounded-2xl" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
          <svg class="w-16 h-16 mx-auto mb-4" style="color: #C59D5F;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="text-xl font-semibold mb-2" style="color: #3E2723; font-family: Georgia, serif;">No Governance Documents Available</h3>
          <p style="color: #4A3933;">Governance documents such as bylaws and certificates will be posted here.</p>
        </div>
      )}
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 md:py-20" style="background: linear-gradient(135deg, #2D5832 0%, #3A6B3F 100%); color: #FAF8F4;">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6" style="font-family: Georgia, serif;">Need a Specific Document?</h2>
      <p class="text-xl mb-8" style="color: #EFE9DC;">
        If you can't find what you're looking for, please reach out to us and we'll be happy to help.
      </p>
      <a
        href="/contact"
        class="inline-block px-8 py-4 rounded-lg font-semibold transition-all shadow-lg"
        style="background-color: #FAF8F4; color: #2D5832;"
        onmouseover="this.style.backgroundColor='#EFE9DC'"
        onmouseout="this.style.backgroundColor='#FAF8F4'"
      >
        Contact Us
      </a>
    </div>
  </section>
</Layout>
