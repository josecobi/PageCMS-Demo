---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

// Fetch site settings
const settings = await getEntry('settings', 'settings');
const {
  // Elected officials
  stateGovernor,
  stateSenateDistrict,
  stateSenator,
  stateDelegatesDistrict,
  stateDelegates,
  cityCouncilDistrict1,
  cityCouncilMember1,
  cityCouncilDistrict2,
  cityCouncilMember2,
  usSenator1,
  usSenator2,
  usCongressionalDistrict,
  usRepresentative,
  // Phone numbers
  phone311,
  phoneSuspiciousBehavior,
  phoneCommunityServices,
  phoneLibrary,
  phoneSchoolSuperintendent,
  phoneSchoolClosings,
  phoneEmergency,
  phoneGasLeaks,
  phonePoisonControl,
  phoneLeadInspection,
  phoneImmunizations,
  phoneLeadPoisoning,
  phoneLeadAbatement,
  phoneDrugActivity,
  phoneCrimePrevention,
  phoneCommunityCleanup,
  phoneEnvironmentalCrimes
} = settings.data;

// Helper to parse delegates list
const delegatesList = stateDelegates ? stateDelegates.split(',').map(d => d.trim()) : [];

// Helper to format phone for tel: link
const formatPhoneLink = (phone: string) => phone.replace(/[^0-9]/g, '');
---

<Layout
  title="Local Resources - Fells Prospect Community Association"
  description="Find helpful local resources for Fells Prospect residents and businesses in Baltimore, MD."
>
  <!-- Page Header -->
  <section class="relative py-20 md:py-28" style="background: linear-gradient(135deg, #1B365D 0%, #4A7C9D 100%);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6" style="font-family: Georgia, serif; color: #FAF8F4;">
        Local Resources
      </h1>
      <p class="text-xl md:text-2xl max-w-3xl mx-auto" style="color: #EFE9DC;">
        Helpful information for Fells Prospect residents and businesses
      </p>
    </div>
    <!-- Decorative bottom -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 60" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
        <path d="M0 0L60 5C120 10 240 20 360 23.3C480 27 600 23 720 21.7C840 20 960 20 1080 23.3C1200 27 1320 33 1380 36.7L1440 40V60H0V0Z" fill="#FAF8F4"/>
      </svg>
    </div>
  </section>

  <!-- General Complaints -->
  <section class="py-16 md:py-20" style="background-color: #FAF8F4;">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <div class="inline-block p-4 rounded-full mb-6" style="background: linear-gradient(135deg, #C1503D, #A84636);">
          <svg class="w-12 h-12" style="color: #FAF8F4;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold mb-4" style="font-family: Georgia, serif; color: #3D3D3D;">
          General Complaints
        </h2>
        <div class="w-32 h-1 mx-auto mb-8" style="background-color: #C1503D;"></div>
      </div>

      <div class="rounded-2xl shadow-xl p-8 md:p-10 mb-8" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
        <div class="text-center mb-8">
          <p class="text-2xl font-bold mb-4" style="font-family: Georgia, serif; color: #C1503D;">
            Baltimore City's One Call Center
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-6">
            <a href={`tel:${formatPhoneLink(phone311)}`} class="inline-flex items-center px-8 py-4 font-semibold rounded-lg transition-all shadow-lg text-xl" style="background-color: #C1503D; color: #FAF8F4;" onmouseover="this.style.backgroundColor='#A84636'" onmouseout="this.style.backgroundColor='#C1503D'">
              <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Dial {phone311}
            </a>
            <a href="https://311.baltimorecity.gov/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-8 py-4 font-semibold rounded-lg transition-all shadow-lg text-xl border-2" style="border-color: #C1503D; color: #C1503D;" onmouseover="this.style.backgroundColor='rgba(193, 80, 61, 0.1)'" onmouseout="this.style.backgroundColor='transparent'">
              <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
              </svg>
              Visit 311 Website
            </a>
          </div>
        </div>

        <div class="grid md:grid-cols-2 gap-4 mb-8">
          <div class="rounded-lg p-4" style="background-color: rgba(193, 80, 61, 0.1);">
            <h3 class="font-bold mb-2" style="color: #C1503D;">• Abandoned vehicles</h3>
          </div>
          <div class="rounded-lg p-4" style="background-color: rgba(45, 88, 50, 0.1);">
            <h3 class="font-bold mb-2" style="color: #1B365D;">• Repairs to public streets, lights, signs</h3>
          </div>
          <div class="rounded-lg p-4" style="background-color: rgba(197, 157, 95, 0.15);">
            <h3 class="font-bold mb-2" style="color: #3D3D3D;">• Parking issues</h3>
          </div>
          <div class="rounded-lg p-4" style="background-color: rgba(193, 80, 61, 0.1);">
            <h3 class="font-bold mb-2" style="color: #C1503D;">• Animal control</h3>
          </div>
          <div class="rounded-lg p-4" style="background-color: rgba(45, 88, 50, 0.1);">
            <h3 class="font-bold mb-2" style="color: #1B365D;">• Building issues & violations</h3>
          </div>
          <div class="rounded-lg p-4" style="background-color: rgba(197, 157, 95, 0.15);">
            <h3 class="font-bold mb-2" style="color: #3D3D3D;">• Water & sewage issues</h3>
          </div>
          <div class="rounded-lg p-4" style="background-color: rgba(193, 80, 61, 0.1);">
            <h3 class="font-bold mb-2" style="color: #C1503D;">• Trash & recycling</h3>
          </div>
          <div class="rounded-lg p-4" style="background-color: rgba(45, 88, 50, 0.1);">
            <h3 class="font-bold mb-2" style="color: #1B365D;">• Health violations</h3>
          </div>
          <div class="rounded-lg p-4" style="background-color: rgba(197, 157, 95, 0.15);">
            <h3 class="font-bold mb-2" style="color: #3D3D3D;">• Bed bugs</h3>
          </div>
          <div class="rounded-lg p-4" style="background-color: rgba(193, 80, 61, 0.1);">
            <h3 class="font-bold mb-2" style="color: #C1503D;">• Graffiti</h3>
          </div>
        </div>

        <div class="text-center p-6 rounded-xl" style="background-color: #1B365D; color: #FAF8F4;">
          <p class="text-lg mb-3 font-semibold">Download the 311 App</p>
          <div class="flex flex-wrap gap-4 justify-center">
            <span class="px-4 py-2 rounded-lg" style="background-color: rgba(250, 248, 244, 0.2);">Android</span>
            <span class="px-4 py-2 rounded-lg" style="background-color: rgba(250, 248, 244, 0.2);">iPhone</span>
          </div>
        </div>
      </div>

      {phoneSuspiciousBehavior && (
        <div class="rounded-2xl shadow-xl p-6 md:p-8 text-center" style="background: linear-gradient(135deg, #C1503D, #A84636); color: #FAF8F4;">
          <p class="text-xl font-bold mb-3" style="font-family: Georgia, serif;">Report Suspicious Behavior</p>
          <a href={`tel:${formatPhoneLink(phoneSuspiciousBehavior)}`} class="inline-flex items-center text-2xl font-bold hover:underline" style="color: #FAF8F4;">
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {phoneSuspiciousBehavior}
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- Elected Officials -->
  <section class="py-16 md:py-20" style="background: linear-gradient(to bottom, #EFE9DC, #F5F1E8);">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <div class="inline-block p-4 rounded-full mb-6" style="background: linear-gradient(135deg, #1B365D, #4A7C9D);">
          <svg class="w-12 h-12" style="color: #D4A574;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold mb-4" style="font-family: Georgia, serif; color: #3D3D3D;">
          Elected Officials
        </h2>
        <div class="w-32 h-1 mx-auto mb-4" style="background-color: #D4A574;"></div>
        <p class="text-sm" style="color: #3D3D3D;">(Updated regularly via PagesCMS)</p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        <!-- State Officials -->
        <div class="rounded-2xl shadow-xl p-8" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
          <h3 class="text-2xl font-bold mb-6 pb-3" style="font-family: Georgia, serif; color: #C1503D; border-bottom: 2px solid #D4A574;">
            State of Maryland
          </h3>
          <div class="space-y-4">
            {stateGovernor && (
              <div>
                <p class="font-semibold mb-1" style="color: #D4A574;">Governor</p>
                <p class="text-lg" style="color: #3D3D3D;">{stateGovernor}</p>
              </div>
            )}
            {stateSenator && (
              <div>
                <p class="font-semibold mb-1" style="color: #D4A574;">{stateSenateDistrict || 'State Senate'}</p>
                <p class="text-lg" style="color: #3D3D3D;">{stateSenator}</p>
              </div>
            )}
            {delegatesList.length > 0 && (
              <div>
                <p class="font-semibold mb-1" style="color: #D4A574;">{stateDelegatesDistrict || 'House of Delegates'}</p>
                <ul class="text-lg space-y-1" style="color: #3D3D3D;">
                  {delegatesList.map(delegate => (
                    <li>• {delegate}</li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </div>

        <!-- Baltimore City Officials -->
        <div class="rounded-2xl shadow-xl p-8" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
          <h3 class="text-2xl font-bold mb-6 pb-3" style="font-family: Georgia, serif; color: #1B365D; border-bottom: 2px solid #D4A574;">
            Baltimore City
          </h3>
          <div class="space-y-4">
            {cityCouncilMember1 && (
              <div>
                <p class="font-semibold mb-1" style="color: #D4A574;">{cityCouncilDistrict1 || 'City Council'}</p>
                <p class="text-lg" style="color: #3D3D3D;">{cityCouncilMember1}</p>
              </div>
            )}
            {cityCouncilMember2 && (
              <div>
                <p class="font-semibold mb-1" style="color: #D4A574;">{cityCouncilDistrict2 || 'City Council'}</p>
                <p class="text-lg" style="color: #3D3D3D;">{cityCouncilMember2}</p>
              </div>
            )}
          </div>
        </div>

        <!-- Federal Senators -->
        {(usSenator1 || usSenator2) && (
          <div class="rounded-2xl shadow-xl p-8" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
            <h3 class="text-2xl font-bold mb-6 pb-3" style="font-family: Georgia, serif; color: #C1503D; border-bottom: 2px solid #D4A574;">
              U.S. Senators
            </h3>
            <div class="space-y-4">
              {usSenator1 && <p class="text-lg" style="color: #3D3D3D;">• {usSenator1}</p>}
              {usSenator2 && <p class="text-lg" style="color: #3D3D3D;">• {usSenator2}</p>}
            </div>
          </div>
        )}

        <!-- House Representative -->
        {usRepresentative && (
          <div class="rounded-2xl shadow-xl p-8" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
            <h3 class="text-2xl font-bold mb-6 pb-3" style="font-family: Georgia, serif; color: #1B365D; border-bottom: 2px solid #D4A574;">
              U.S. House of Representatives
            </h3>
            <div>
              <p class="font-semibold mb-1" style="color: #D4A574;">{usCongressionalDistrict || 'Congressional District'}</p>
              <p class="text-lg" style="color: #3D3D3D;">{usRepresentative}</p>
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Community Services -->
  <section class="py-16 md:py-20" style="background-color: #FAF8F4;">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <div class="inline-block p-4 rounded-full mb-6" style="background: linear-gradient(135deg, #C1503D, #A84636);">
          <svg class="w-12 h-12" style="color: #FAF8F4;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold mb-4" style="font-family: Georgia, serif; color: #3D3D3D;">
          Community Services
        </h2>
        <div class="w-32 h-1 mx-auto" style="background-color: #C1503D;"></div>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {phoneCommunityServices && (
          <div class="rounded-2xl shadow-xl p-8 hover:scale-105 transition-transform" style="background: linear-gradient(to bottom right, #F5F1E8, #EFE9DC);">
            <div class="flex items-start">
              <div class="w-12 h-12 rounded-full flex items-center justify-center mr-4 flex-shrink-0" style="background-color: #C1503D;">
                <svg class="w-6 h-6" style="color: #FAF8F4;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-2" style="font-family: Georgia, serif; color: #C1503D;">Community Services - 1st District</h3>
                <p class="mb-3" style="color: #3D3D3D;">Energy, health, education, jobs, housing</p>
                <a href={`tel:${formatPhoneLink(phoneCommunityServices)}`} class="text-lg font-semibold hover:underline" style="color: #1B365D;">{phoneCommunityServices}</a>
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Education -->
  <section class="py-16 md:py-20" style="background: linear-gradient(to bottom, #EFE9DC, #F5F1E8);">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <div class="inline-block p-4 rounded-full mb-6" style="background: linear-gradient(135deg, #1B365D, #4A7C9D);">
          <svg class="w-12 h-12" style="color: #D4A574;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold mb-4" style="font-family: Georgia, serif; color: #3D3D3D;">
          Education
        </h2>
        <div class="w-32 h-1 mx-auto" style="background-color: #D4A574;"></div>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {phoneLibrary && (
          <div class="rounded-xl shadow-lg p-6" style="background: linear-gradient(135deg, #C1503D, #A84636); color: #FAF8F4;">
            <h3 class="text-lg font-bold mb-3">Enoch Pratt Library</h3>
            <a href={`tel:${formatPhoneLink(phoneLibrary)}`} class="text-xl font-semibold hover:underline">{phoneLibrary}</a>
          </div>
        )}
        {phoneSchoolSuperintendent && (
          <div class="rounded-xl shadow-lg p-6" style="background: linear-gradient(135deg, #1B365D, #4A7C9D); color: #FAF8F4;">
            <h3 class="text-lg font-bold mb-3">School Superintendent</h3>
            <a href={`tel:${formatPhoneLink(phoneSchoolSuperintendent)}`} class="text-xl font-semibold hover:underline">{phoneSchoolSuperintendent}</a>
          </div>
        )}
        {phoneSchoolClosings && (
          <div class="rounded-xl shadow-lg p-6" style="background: linear-gradient(135deg, #C1503D, #A84636); color: #FAF8F4;">
            <h3 class="text-lg font-bold mb-3">School Closings & Holidays</h3>
            <a href={`tel:${formatPhoneLink(phoneSchoolClosings)}`} class="text-xl font-semibold hover:underline">{phoneSchoolClosings}</a>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Emergency -->
  <section class="py-16 md:py-20" style="background-color: #FAF8F4;">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <div class="inline-block p-4 rounded-full mb-6" style="background: linear-gradient(135deg, #C1503D, #A84636);">
          <svg class="w-12 h-12" style="color: #FAF8F4;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold mb-4" style="font-family: Georgia, serif; color: #3D3D3D;">
          Emergency
        </h2>
        <div class="w-32 h-1 mx-auto" style="background-color: #C1503D;"></div>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {phoneEmergency && (
          <div class="rounded-xl shadow-lg p-6" style="background: linear-gradient(135deg, #C1503D, #A84636); color: #FAF8F4;">
            <h3 class="text-lg font-bold mb-3">Police, Fire & Medical Emergency</h3>
            <a href={`tel:${formatPhoneLink(phoneEmergency)}`} class="text-3xl font-bold hover:underline">{phoneEmergency}</a>
          </div>
        )}
        {phoneGasLeaks && (
          <div class="rounded-xl shadow-lg p-6" style="background: linear-gradient(135deg, #1B365D, #4A7C9D); color: #FAF8F4;">
            <h3 class="text-lg font-bold mb-3">Gas Leaks</h3>
            <a href={`tel:${formatPhoneLink(phoneGasLeaks)}`} class="text-xl font-semibold hover:underline">{phoneGasLeaks}</a>
          </div>
        )}
        {phonePoisonControl && (
          <div class="rounded-xl shadow-lg p-6" style="background: linear-gradient(135deg, #C1503D, #A84636); color: #FAF8F4;">
            <h3 class="text-lg font-bold mb-3">Poison Control Center</h3>
            <a href={`tel:${formatPhoneLink(phonePoisonControl)}`} class="text-xl font-semibold hover:underline">{phonePoisonControl}</a>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Health -->
  <section class="py-16 md:py-20" style="background: linear-gradient(to bottom, #EFE9DC, #F5F1E8);">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <div class="inline-block p-4 rounded-full mb-6" style="background: linear-gradient(135deg, #1B365D, #4A7C9D);">
